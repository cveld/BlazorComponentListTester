@page "/"
@using BlazorComponentListTester.Data

<h1>Hello, world!</h1>

Welcome to your new app.

@foreach(var item in list)
{
    <Component Value="item"></Component>
}

@code {
    List<ComponentModel> list;
    protected override void OnInitialized()
    {
        list = new List<ComponentModel>();
        for (int i = 0; i < 10; i++)
        {
            list.Add(new ComponentModel
            {
                ID = i.ToString(),
                Title = Guid.NewGuid().ToString()
            });
        }
    }
}